{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "next-auth"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/components/sidebar", "src/app/api/test-connection/route.js", "src/app/api/admin/employers/search/route.js", "src/app/api/admin/candidats/allCandidats/route.ts", "src/app/api/admin/candidats/[id]/validate/route.ts", "src/app/api/admin/employers/employer/route.ts", "src/app/api/admin/subscriptions/route.ts"],
  "exclude": ["node_modules"]
}
